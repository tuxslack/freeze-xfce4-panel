#    com este programa. Se não, veja <http://www.gnu.org/licenses/>.

clear


############## APRESENTAÇÃO ###############################
echo -e '*====================================================================*
||     \e[34;1m ####%.         ########                    \e[m                 ||
||     \e[34;1m ######.        #"""###                     \e[m                 ||
||     \e[34;1m ##   ## ##  ##     ## .;##;. ##  ,## ##  ## \e[m                ||
||     \e[34;1m ##   ## ##  ##    ##  ##"  #  ##.#"  ##  ## \e[m                ||
||     \e[34;1m ##   ## ##  ##   ##   ##  ,#  ##"`   ##  ## \e[m                ||
||     \e[34;1m ##   ## ##  ##  ##    ####"   ##     ##  ## \e[33;1m     \e[m \e[32;1m    \\\e[m\e[33;1mo\e[m\e[32;1m/ \e[m  ||
||     \e[34;1m ######" ##..## ###..# "#.     ##     ##..## \e[32;1mSistema   \e[33;1m # \e[m   ||
||     \e[m\e[34;1m #####%¨ "####"#######  "####  ##     "####" \e[32;1mGNU\e[m\e[33;1m/\e[m\e[32;1mLinux\e[m\e[32;1m_/ \_ \e[m ||
*====================================================================*'

echo -e '\e[32;1m PT \e[m'
echo -e '\e[32;1m Vou auxiliar na segurança do painel,preciso da senha.\e[m'
echo -e '\e[31;1m  ATENÇÃO! \e[m                                          '
echo -e '\e[32;1m Após digitar a senha, o sistema será reiniciado.     \e[m'
echo ''
echo -e '\e[33;1m EN \e[m'
echo -e '\e[33;1m I will assist in security panel, i need the root pass.\e[m'
echo -e '\e[31;1m  WARNING!                                             \e[m'
echo -e '\e[33;1m After entering the password, the system will reboot.  \e[m'
##############FIM APRESENTAÇÃO ###############################

echo ''
echo -e '\e[31;1m   d \e[m \e[32;1m Decongelar painel \e[m - \e[33;1m Unfreeze panel \e[m'
echo -e '\e[31;1m   c \e[m \e[32;1m Congelar painel   \e[m - \e[33;1m Freeze panel \e[m'
read opcao

############## ESCOLHA PAINEL ###################

if [ "$opcao" == "d" ]; then

sudo cp -a ~/.config/xfce4/xfconf/xfce-perchannel-xml/xfce4-panel.xml /etc/xdg/xfce4/xfconf/xfce-perchannel-xml/

cd /etc/xdg/xfce4/xfconf/xfce-perchannel-xml/

sudo sed -i 's/<channel name="xfce4-panel" version="1.0" unlocked="root">/<channel name="xfce4-panel" version="1.0">/g' xfce4-panel.xml

echo "Você escolheu destravar, aguarde vou reiniciar para"
echo "finalizar as configurações até logo..."
sleep 5
sudo shutdown -r now

else

sudo cp -a ~/.config/xfce4/xfconf/xfce-perchannel-xml/xfce4-panel.xml /etc/xdg/xfce4/xfconf/xfce-perchannel-xml/

cd /etc/xdg/xfce4/xfconf/xfce-perchannel-xml/

sudo sed -i 's/<channel name="xfce4-panel" version="1.0">/<channel name="xfce4-panel" version="1.0" unlocked="root">/g' xfce4-panel.xml

echo "Você escolheu travar, aguarde vou reiniciar para"
echo "finalizar as configurações até logo..."
sleep 5
sudo shutdown -r now

fi
